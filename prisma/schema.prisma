generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Client {
  id            String          @id
  name          String
  email         String          @unique
  phone         String?
  address       String?
  logo          String          @default("/img/logo.png")
  status        String          @default("active")
  createdBy     String
  createdAt     DateTime        @default(now())
  updatedAt     DateTime
  nit           String?
  User          User            @relation(fields: [createdBy], references: [id])
  ClientService ClientService[]
  ClientShare   ClientShare[]
}

model ClientService {
  id        String    @id
  clientId  String
  serviceId String
  startDate DateTime  @default(now())
  endDate   DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime
  Client    Client    @relation(fields: [clientId], references: [id], onDelete: Cascade)
  Service   Service   @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  @@unique([clientId, serviceId])
}

model ClientShare {
  id        String   @id
  clientId  String
  userId    String
  createdAt DateTime @default(now())
  Client    Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  User      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([clientId, userId])
}

model Invoice {
  id            String   @id
  invoiceNumber String   @unique
  clientId      String
  clientName    String
  clientNit     String
  totalAmount   Float
  fecha         DateTime
  concepto      String?
  servicio      String?
  observaciones String?
  filePath      String
  createdBy     String
  createdAt     DateTime @default(now())
  updatedAt     DateTime
}

model Model {
  id          String   @id
  name        String
  description String?
  type        String
  parameters  Json
  createdBy   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime
  User        User     @relation(fields: [createdBy], references: [id])
}

model Role {
  id          String   @id
  name        String
  description String?
  permissions String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime
  User        User[]
}

model Service {
  id            String          @id
  name          String
  description   String?
  price         Float
  duration      String?
  status        String          @default("active")
  createdBy     String?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime
  currency      String          @default("USD")
  icon          String          @default("Briefcase")
  ClientService ClientService[]
  User          User?           @relation(fields: [createdBy], references: [id])
}

model Task {
  id          String        @id
  title       String
  description String?
  status      String        @default("pending")
  priority    String        @default("medium")
  dueDate     DateTime?
  position    Int           @default(0)
  color       String?
  createdBy   String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime
  images      String[]
  User        User          @relation(fields: [createdBy], references: [id])
  TaskComment TaskComment[]
}

model TaskComment {
  id        String   @id
  text      String
  author    String
  taskId    String
  createdAt DateTime @default(now())
  Task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
}

model User {
  id          String        @id
  email       String        @unique
  password    String?
  roleId      String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime
  firebaseUid String?       @unique
  firstName   String        @default("")
  lastName    String        @default("")
  Client      Client[]
  ClientShare ClientShare[]
  Model       Model[]
  Service     Service[]
  Task        Task[]
  Role        Role          @relation(fields: [roleId], references: [id])
}
